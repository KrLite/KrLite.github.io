<script>
  let currentState = 'add' // 'add', 'input', 'display'
  let tagValue = ''

  const addButton = document.getElementById('add-button') as HTMLButtonElement
  const inputState = document.getElementById('input-state') as HTMLDivElement
  const tagDisplay = document.getElementById('tag-display') as HTMLDivElement
  const tagInput = document.getElementById('tag-input') as HTMLInputElement
  const confirmButton = document.getElementById('confirm-button') as HTMLButtonElement
  const cancelButton = document.getElementById('cancel-button') as HTMLButtonElement
  const deleteButton = document.getElementById('delete-button') as HTMLButtonElement
  const tagText = document.getElementById('tag-text') as HTMLSpanElement

  // Switch to input state
  function switchToInput() {
    currentState = 'input'
    addButton?.classList.add('hidden')

    setTimeout(() => {
      inputState?.classList.add('active')
      tagInput?.focus()
    }, 100)
  }

  // Switch to display state
  function switchToDisplay() {
    currentState = 'display'

    inputState?.classList.remove('active')

    setTimeout(() => {
      tagDisplay?.classList.add('active')
      if (tagText) tagText.textContent = tagValue
    }, 300)
  }

  // Return to add state
  function switchToAdd() {
    if (currentState === 'display') {
      tagDisplay?.classList.remove('active')
    } else if (currentState === 'input') {
      inputState?.classList.remove('active')
    }

    currentState = 'add'

    setTimeout(() => {
      addButton?.classList.remove('hidden')
      tagValue = ''
      if (tagInput) tagInput.value = ''
      updateConfirmButton()
    }, 300)
  }

  // Update confirm button state
  function updateConfirmButton() {
    if (tagInput?.value.trim()) {
      confirmButton?.classList.remove('disabled')
    } else {
      confirmButton?.classList.add('disabled')
    }
  }

  addButton?.addEventListener('click', switchToInput)

  tagInput?.addEventListener('input', (e) => {
    const target = e.target as HTMLInputElement
    tagValue = target.value
    updateConfirmButton()
  })

  tagInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' && tagValue.trim()) {
      switchToDisplay()
    } else if (e.key === 'Escape') {
      switchToAdd()
    }
  })

  confirmButton?.addEventListener('click', () => {
    if (tagValue.trim()) {
      switchToDisplay()
    }
  })

  cancelButton?.addEventListener('click', switchToAdd)

  deleteButton?.addEventListener('click', switchToAdd)
</script>

